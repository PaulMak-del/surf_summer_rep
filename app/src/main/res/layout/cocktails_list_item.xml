<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cocktail_list_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="4dp"
    android:layout_gravity="center_horizontal"
    >

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/recycler_item_image"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/rectangle_15"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:id="@+id/rectangle_2"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rectangle_2"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/recycler_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="102dp"
        android:layout_marginBottom="34dp"
        android:layout_marginHorizontal="20dp"
        android:text="@string/pink_lemona"
        android:textAppearance="@style/pink_lemona"

        app:layout_constraintTop_toTopOf="@+id/recycler_item_image"
        app:layout_constraintBottom_toBottomOf="@+id/recycler_item_image"
        app:layout_constraintStart_toStartOf="@+id/recycler_item_image"
        app:layout_constraintEnd_toEndOf="@id/recycler_item_image"
        />

</androidx.constraintlayout.widget.ConstraintLayout>